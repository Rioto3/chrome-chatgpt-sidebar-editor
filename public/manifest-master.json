{
  "manifest_version": 3,
  "name": "chatgpt-sidebar-editor",
  "version": "1.0.0",
  "description": "ChatGPTにサイドバーからプロンプト送信",
  "permissions": ["activeTab", "storage", "tabs"],
  "host_permissions": ["https://chat.openai.com/*", "https://chatgpt.com/*"],

  "sidebar_action": {
    "default_panel": "sidepanel.html",
    "default_title": "ChatGPTエディタ",
    "default_icon": {
      "16": "icon-16x16.png",
      "32": "icon-32x32.png",
      "48": "icon-48x48.png",
      "128": "icon-128x128.png"
    }
  },

  "icons": {
    "16": "icon-16x16.png",
    "32": "icon-32x32.png",
    "48": "icon-48x48.png",
    "128": "icon-128x128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content.js"]
    }
  ]
}
