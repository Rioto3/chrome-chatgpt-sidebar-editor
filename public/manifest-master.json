{
  "manifest_version": 3,
  "name": "送Rail 営業支援ツール",
  "version": "{placeholder}",
  "description": "企業フォーム自動入力とトラッキング機能",
  
  "icons": {
    "16": "icon-16x16.png",
    "32": "icon-32x32.png",
    "48": "icon-48x48.png",
    "128": "icon-128x128.png"
  },
  
  "permissions": [
    "sidePanel",
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "identity",
    "identity.email"
  ],
  
  "host_permissions": [
    "https://sheets.googleapis.com/*",
    "<all_urls>"
  ],
  
  "oauth2": {
    "client_id": "{placeholder}",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets.readonly",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile",
      "openid"
    ]
  },

  "action": {
    "default_title": "送Rail"
  },
  
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}